<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Gravity\NodeBundle\Entity\NodeContent" table="node_content"
            inheritance-type="JOINED">
        <discriminator-column name="discriminator_field" />
        <!-- discriminator map is dynamically inserted -->
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="delta" type="integer" column="delta" nullable="false"/>

        <many-to-one target-entity="Gravity\NodeBundle\Entity\Node" field="entity" inversed-by="fields" orphan-removal="true">
        </many-to-one>

        <many-to-one target-entity="Gravity\NodeBundle\Entity\ContentTypeField" field="contentTypeField" inversed-by="contents" orphan-removal="true">

        </many-to-one>

        <!--<many-to-one target-entity="Gravity\NodeBundle\Entity\ContentTypeField" field="contentTypeField" inversed-by="fields" orphan-removal="true">-->
        <!--</many-to-one>-->
    </entity>
</doctrine-mapping>
